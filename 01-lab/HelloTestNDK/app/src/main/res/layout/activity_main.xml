<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.nicolasfonsat.hellotestndk.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="13"
            android:textAlignment="center"
            android:layout_marginLeft="55dp"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:text="30"
            android:hint="Merci d'entrer un nombre" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Perf calcul" />


    </RelativeLayout>

    <TextView
        android:id="@+id/fibonnaci_native"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Native speed : 0ms"/>

    <TextView
        android:id="@+id/fibonnaci_java"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Java speed : 0ms"/>

    <TextView
        android:id="@+id/fibonnaci_callback"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="C/callback speed : 0ms"/>

</LinearLayout>
